@model Category

<div class="card mt-4 shadow-sm">
    <div class="card-body">
        <form method="post" asp-action="Delete" asp-controller="Category">
            <h2 class="text-danger mb-3">Delete Category</h2>
            <hr />

            <p>Are you sure you want to delete this category?</p>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" disabled />
            </div>

            <div class="mb-3">
                <label asp-for="DisplayOrder" class="form-label"></label>
                <input asp-for="DisplayOrder" class="form-control" disabled />
            </div>

            <!-- Dugmad -->
            <div class="row mt-3">
                <div class="col-6 col-md-3 mb-2">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3 mb-2">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
