@using BookShelf.Models.Models
@model Category

<div class="card shadow-lg rounded-3 mt-5 mx-auto" style="max-width: 500px;">
    <div class="card-header py-3 bg-success text-white">
        <h2 class="text-danger mb-0">Delete Category</h2>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-action="Delete" asp-controller="Category">
            <hr />

            <p>Are you sure you want to delete this category?</p>

            <!-- Category Name (disabled) -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label text-dark">Name</label>
                <input asp-for="Name" class="form-control form-control-lg" disabled />
            </div>

            <!-- Display Order (disabled) -->
            <div class="mb-3">
                <label asp-for="DisplayOrder" class="form-label text-dark">Display Order</label>
                <input asp-for="DisplayOrder" class="form-control form-control-lg" disabled />
            </div>

            <!-- Dugmad -->
            <div class="d-flex justify-content-start mt-4">
                <button type="submit" class="btn btn-danger me-2">Delete</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
