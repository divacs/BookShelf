@model BookShelf.Models.Models.Product

<div class="container my-5" style="flex: 1 0 auto; padding-bottom: 80px;">
    <div class="row justify-content-center">
        <!-- Slika knjige -->
        <div class="col-md-5 mb-4">
            <div class="card shadow-sm">
                <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded" style="object-fit: cover; height: 450px;" />
            </div>
        </div>

        <!-- Detalji knjige i kupovina -->
        <div class="col-md-7">
            <div class="card shadow-sm p-4">
                <h2 class="text-primary mb-2">@Model.Title</h2>
                <p class="text-muted mb-1"><strong>Author:</strong> @Model.Author</p>
                <p class="text-muted mb-1"><strong>ISBN:</strong> @Model.ISBN</p>
                <p class="text-muted mb-1"><strong>Category ID:</strong> @Model.CategoryId</p>
                <p class="mb-3"><strong>Description:</strong> @Model.Description</p>

                <div class="mb-3">
                    <span class="text-muted me-2" style="text-decoration: line-through;">@Model.ListPrice.ToString("C")</span>
                    <span class="fw-bold text-danger fs-4">@Model.Price.ToString("C")</span>
                </div>

                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-flex align-items-center gap-3 mb-3">
                    <input type="hidden" name="productId" value="@Model.Id" />

                    <div>
                        <label for="count" class="form-label"><strong>Quantity</strong></label>
                        <input type="number" name="count" id="count" value="1" min="1" class="form-control" style="width: 100px;" />
                    </div>

                    <button type="submit" class="btn btn-success btn-lg mt-4">Add to Cart</button>
                </form>

                <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-3px);
        transition: all 0.3s ease;
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
    }

    .btn-success:hover {
        background-color: #28a745cc;
    }

    .fs-4 {
        font-size: 1.5rem;
    }
</style>
