@model BookShelf.Models.Models.ShoppingCart

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-5 mb-4">
            <div class="card shadow-sm">
                <img src="@Model.Product.ImageUrl" alt="@Model.Product.Title" class="img-fluid rounded" style="object-fit: cover; height: 450px;" />
            </div>
        </div>

        <div class="col-md-7">
            <div class="card shadow-sm p-4">
                <h2 class="text-primary mb-2">@Model.Product.Title</h2>
                <p class="text-muted"><strong>Author:</strong> @Model.Product.Author</p>
                <p class="text-muted"><strong>ISBN:</strong> @Model.Product.ISBN</p>
                <p class="text-muted"><strong>Category:</strong> @Model.Product.Category.Name</p>
                <p><strong>Description:</strong> @Html.Raw(Model.Product.Description)</p>

                <div class="mb-3">
                    <span class="text-muted me-2" style="text-decoration: line-through;">@Model.Product.ListPrice.ToString("C")</span>
                    <span class="fw-bold text-danger fs-4">@Model.Product.Price.ToString("C")</span>
                </div>

                <form asp-area="Customer" asp-controller="Cart" asp-action="AddToCart" method="post" class="d-flex align-items-center gap-3 mb-3">
                    <input type="hidden" name="productId" value="@Model.ProductId" />

                    <div>
                        <label for="count" class="form-label"><strong>Quantity</strong></label>
                        <input type="number" name="count" id="count" value="1" min="1" class="form-control" style="width: 100px;" />
                    </div>

                    <button type="submit" class="btn btn-success btn-lg mt-4">Add to Cart</button>
                </form>

                <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
