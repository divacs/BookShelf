@model IEnumerable<BookShelf.Models.Models.ShoppingCart>

<div class="container my-5">
    <h2 class="text-primary mb-4">Your Shopping Cart</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Your cart is empty.</div>
    }
    else
    {
        <!-- Ukupan broj artikala i ukupna cena -->
        <div class="mb-3">
            <p class="fw-bold mb-1">Ukupno artikala: @Model.Sum(c => c.Count)</p>
            <p class="fw-bold mb-0">Ukupna cena: @Model.Sum(c => c.Count * c.Product.Price).ToString("C")</p>
        </div>

        <table class="table table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Book</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@item.Product.ImageUrl" alt="@item.Product.Title" style="height:60px;width:auto;" class="me-2" />
                            @item.Product.Title
                        </td>
                        <td>@item.Product.Price.ToString("C")</td>
                        <td>
                            <div class="d-flex align-items-center">
                                <a asp-action="Minus" asp-route-cartId="@item.Id" class="btn btn-outline-secondary btn-sm">-</a>
                                <span class="mx-2">@item.Count</span>
                                <a asp-action="Plus" asp-route-cartId="@item.Id" class="btn btn-outline-secondary btn-sm">+</a>
                            </div>
                        </td>
                        <td>@(item.Count * item.Product.Price).ToString("C")</td>
                        <td>
                            <a asp-action="Remove" asp-route-cartId="@item.Id" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Remove
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-end">
            <h4>Total: @Model.Sum(c => c.Count * c.Product.Price).ToString("C")</h4>
            <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Continue Shopping</a>
            <a asp-action="Checkout" class="btn btn-success">Proceed to Checkout</a>
        </div>
    }
</div>
