@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg rounded-4 p-4" style="max-width: 450px; width: 100%;">
        <div class="card-body">
            <h2 class="text-center mb-3">@ViewData["Title"]</h2>
            <p class="text-muted text-center">Enter the code from your authenticator app.</p>
            <hr />

            <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                <input asp-for="RememberMe" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.TwoFactorCode" class="form-control rounded-3" autocomplete="off" placeholder="Code" />
                    <label asp-for="Input.TwoFactorCode">Authenticator Code</label>
                    <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="Input.RememberMachine" class="form-check-input" />
                    <label asp-for="Input.RememberMachine" class="form-check-label"></label>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 rounded-3 fw-semibold">Log in</button>
            </form>

            <div class="text-center mt-3">
                <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">
                    Use a recovery code instead
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
