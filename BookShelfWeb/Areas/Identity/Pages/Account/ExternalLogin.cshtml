@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "External Login";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg rounded-4 p-4" style="max-width: 500px; width: 100%;">
        <div class="card-body">
            <h2 class="text-center mb-3 fw-bold">@ViewData["Title"]</h2>
            <p class="text-muted text-center mb-4">
                You've successfully authenticated with
                <strong>@Model.ProviderDisplayName</strong>.
                Please confirm your email below to complete registration.
            </p>
            <hr />
            <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control rounded-3" autocomplete="email" placeholder="Enter your email" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100 py-2 rounded-3 fw-semibold">Register</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
