@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg rounded-4 p-4" style="max-width: 450px; width: 100%;">
        <div class="card-body">
            <h2 class="text-center mb-3">@ViewData["Title"]</h2>
            <p class="text-muted text-center">Enter one of your recovery codes to log in.</p>
            <hr />

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.RecoveryCode" class="form-control rounded-3" autocomplete="off" placeholder="Recovery code" />
                    <label asp-for="Input.RecoveryCode">Recovery Code</label>
                    <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 rounded-3 fw-semibold">Log in</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
