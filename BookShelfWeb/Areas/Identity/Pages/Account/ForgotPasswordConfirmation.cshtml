@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Password Reset Sent";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg rounded-4 p-4 text-center" style="max-width: 450px; width: 100%;">
        <div class="card-body">
            <h2 class="mb-3 text-success fw-bold">@ViewData["Title"]</h2>
            <hr />
            <p class="text-muted">
                Please check your email for a link to reset your password.
            </p>
            <a asp-page="/Account/Login" class="btn btn-primary mt-3 rounded-3 px-4">Back to Login</a>
        </div>
    </div>
</div>
