@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="card shadow-lg rounded-4 p-4 text-center" style="max-width: 500px; width: 100%;">
        <div class="card-body">
            <h2 class="mb-3">@ViewData["Title"]</h2>
            <hr />

            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="btn btn-danger rounded-3">Click here to Logout</button>
                </form>
            }
            else
            {
                <p class="text-success">You have successfully logged out of the application.</p>
            }
        </div>
    </div>
</div>
