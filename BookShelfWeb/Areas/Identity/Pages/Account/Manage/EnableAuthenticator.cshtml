@page
@model EnableAuthenticatorModel
@{
    ViewData["Title"] = "Configure Authenticator App";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg rounded-4 p-4" style="max-width: 550px; width: 100%;">
        <div class="card-body">
            <h2 class="text-center mb-4">@ViewData["Title"]</h2>
            <partial name="_StatusMessage" for="StatusMessage" />
            <hr />

            <p>To use an authenticator app, follow these steps:</p>

            <ol class="list-group list-group-numbered mb-4">
                <li class="list-group-item">
                    Download a two-factor authenticator app like Microsoft Authenticator for
                    <a href="https://go.microsoft.com/fwlink/?Linkid=825072">Android</a> and
                    <a href="https://go.microsoft.com/fwlink/?Linkid=825073">iOS</a>, or
                    Google Authenticator for
                    <a href="https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2&amp;hl=en">Android</a> and
                    <a href="https://itunes.apple.com/us/app/google-authenticator/id388497605?mt=8">iOS</a>.
                </li>
                <li class="list-group-item">
                    Scan the QR code or enter this key: <kbd>@Model.SharedKey</kbd> into your authenticator app.
                    <div class="alert alert-info mt-2">
                        Learn how to <a href="https://go.microsoft.com/fwlink/?Linkid=852423">enable QR code generation</a>.
                    </div>
                    <div id="qrCode" class="mb-3"></div>
                    <div id="qrCodeData" data-url="@Model.AuthenticatorUri"></div>
                </li>
                <li class="list-group-item">
                    Enter the unique code generated by your authenticator app below to verify.
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <form id="send-code" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Code" class="form-control rounded-3" autocomplete="off" placeholder="Enter verification code" />
                                    <label asp-for="Input.Code">Verification Code</label>
                                    <span asp-validation-for="Input.Code" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary w-100 py-2 rounded-3 fw-semibold">Verify</button>
                            </form>
                        </div>
                    </div>
                </li>
            </ol>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
