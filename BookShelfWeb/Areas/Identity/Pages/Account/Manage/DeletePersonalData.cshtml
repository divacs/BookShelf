@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg rounded-4 p-4" style="max-width: 500px; width: 100%;">
        <div class="card-body">
            <h2 class="text-center text-danger mb-3">@ViewData["Title"]</h2>
            <hr />

            <div class="alert alert-warning rounded-3" role="alert">
                <p class="mb-1">
                    <strong>⚠️ Deleting this data will permanently remove your account.</strong>
                </p>
                <p class="mb-0">This action cannot be undone.</p>
            </div>

            <form id="delete-user" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

                @if (Model.RequirePassword)
                {
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" type="password" class="form-control rounded-3" autocomplete="current-password" aria-required="true" placeholder="Enter your password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                }

                <button class="btn btn-danger w-100 py-2 rounded-3 fw-semibold" type="submit">
                    Delete data and close my account
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
