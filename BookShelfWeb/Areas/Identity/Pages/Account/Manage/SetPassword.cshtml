@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Set password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg rounded-4 p-4" style="max-width: 500px; width: 100%;">
        <div class="card-body">
            <h2 class="text-center mb-4">@ViewData["Title"]</h2>
            <partial name="_StatusMessage" for="StatusMessage" />
            <p class="text-info">You do not have a local username/password for this site. Add a local account so you can log in without an external login.</p>
            <hr />

            <form id="set-password-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.NewPassword" class="form-control rounded-3" autocomplete="new-password" placeholder="Please enter your new password." />
                    <label asp-for="Input.NewPassword">New Password</label>
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>
                <div class="form-floating mb-4">
                    <input asp-for="Input.ConfirmPassword" class="form-control rounded-3" autocomplete="new-password" placeholder="Please confirm your new password." />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100 py-2 rounded-3 fw-semibold">Set password</button>
            </form>
        </div>
    </div>
</div>
