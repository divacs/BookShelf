@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg rounded-4 p-4" style="max-width: 500px; width: 100%;">
        <div class="card-body">
            <h2 class="text-center mb-4">@ViewData["Title"]</h2>
            <partial name="_StatusMessage" for="StatusMessage" />
            <hr />

            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control rounded-3" placeholder="Please choose your username." disabled />
                    <label asp-for="Username">Username</label>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.PhoneNumber" class="form-control rounded-3" placeholder="Please enter your phone number." />
                    <label asp-for="Input.PhoneNumber">Phone Number</label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                <button id="update-profile-button" type="submit" class="btn btn-primary w-100 py-2 rounded-3 fw-semibold">
                    Save
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
