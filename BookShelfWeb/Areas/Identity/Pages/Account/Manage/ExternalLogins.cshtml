@page
@model ExternalLoginsModel
@{
    ViewData["Title"] = "Manage External Logins";
    ViewData["ActivePage"] = ManageNavPages.ExternalLogins;
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg rounded-4 p-4" style="max-width: 600px; width: 100%;">
        <div class="card-body">
            <h2 class="text-center mb-4">@ViewData["Title"]</h2>
            <partial name="_StatusMessage" for="StatusMessage" />
            <hr />

            @if (Model.CurrentLogins?.Count > 0)
            {
                <h5>Registered Logins</h5>
                <table class="table table-hover mb-4">
                    <tbody>
                        @foreach (var login in Model.CurrentLogins)
                        {
                            <tr>
                                <td>@login.ProviderDisplayName</td>
                                <td class="text-end">
                                    @if (Model.ShowRemoveButton)
                                    {
                                        <form id="@($"remove-login-{login.LoginProvider}")" asp-page-handler="RemoveLogin" method="post" class="d-inline">
                                            <input asp-for="@login.LoginProvider" name="LoginProvider" type="hidden" />
                                            <input asp-for="@login.ProviderKey" name="ProviderKey" type="hidden" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                Remove
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

            @if (Model.OtherLogins?.Count > 0)
            {
                <h5>Add another service to log in</h5>
                <hr />
                <form id="link-login-form" asp-page-handler="LinkLogin" method="post">
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var provider in Model.OtherLogins)
                        {
                            <button type="submit" class="btn btn-primary rounded-3" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                @provider.DisplayName
                            </button>
                        }
                    </div>
                </form>
            }
        </div>
    </div>
</div>
